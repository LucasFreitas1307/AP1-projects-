#include <stdio.h>

int main() {
    int idade;
    char possui_carteira;


    printf("Digite a idade da pessoa: ");
    scanf("%i", &idade);

    printf("A pessoa possui carteira de motorista? (Sim/Nao): ");
    scanf(" %c", &possui_carteira);


    if (idade >= 18 && (possui_carteira == 'Sim' || possui_carteira == 'sim')) {
        printf("Pode dirigir.\n");
    } else {
        printf("Nao pode dirigir.\n");
    }

    return 0;
}
